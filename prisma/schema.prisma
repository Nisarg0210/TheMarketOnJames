generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          String    @default("employee") // employee, admin, manager
  active        Boolean   @default(true)
  locationId    String?   // Home location
  location      Location? @relation(fields: [locationId], references: [id])
  createdAt     DateTime  @default(now())
  lastLoginAt   DateTime?
  
  notifications Notification[]
  shifts        Shift[]
  comments      ScheduleComment[]
  auditLogs     AuditLog[]
  

  sentSwapRequests     ShiftSwapRequest[] @relation("RequestingUser")
  receivedSwapRequests ShiftSwapRequest[] @relation("TargetUser")
  availability         Availability[]

  accounts      Account[]
  sessions      Session[]
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Category {
  id       String    @id @default(cuid())
  name     String    @unique
  products Product[]
}

model Product {
  id                String           @id @default(cuid())
  name              String
  categoryId        String
  category          Category         @relation(fields: [categoryId], references: [id])
  expiryTracking    Boolean          @default(false)
  sku               String?          // New Phase 2
  minStockThreshold Int?             // New Phase 2
  locationId        String?
  location          Location?        @relation(fields: [locationId], references: [id])
  createdAt         DateTime         @default(now())
  batches           InventoryBatch[]
}

model InventoryBatch {
  id              String   @id @default(cuid())
  productId       String
  product         Product  @relation(fields: [productId], references: [id])
  qty             Int
  expiryDate      DateTime?
  receivedDate    DateTime @default(now())
  vendor          String?  // Deprecated phase 2 string
  vendorId        String?
  vendorRel       Vendor?  @relation(fields: [vendorId], references: [id])
  locationId      String?
  location        Location? @relation(fields: [locationId], references: [id])
  lotNumber       String?  // New Phase 2
  storageLocation String?  // New Phase 2
  alert20Sent     Boolean  @default(false)
  alert1Sent      Boolean  @default(false)
  createdAt       DateTime @default(now())
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  type      String   // e.g., "expiry", "schedule"
  title     String
  message   String
  link      String?
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Schedule {
  id            String   @id @default(cuid())
  weekStartDate DateTime
  status        String   @default("draft") // draft, published
  locationId    String?
  location      Location? @relation(fields: [locationId], references: [id])
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  shifts   Shift[]
  comments ScheduleComment[]
}

model Shift {
  id         String   @id @default(cuid())
  scheduleId String
  schedule   Schedule @relation(fields: [scheduleId], references: [id])
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  date       DateTime
  startTime  String   // HH:mm
  endTime    String   // HH:mm
  actualHours Float?   // Manual override for total hours
  notes      String?
  createdAt  DateTime @default(now())
  
  comments      ScheduleComment[]
  swapRequests  ShiftSwapRequest[]
}

model ScheduleComment {
  id         String    @id @default(cuid())
  scheduleId String?
  schedule   Schedule? @relation(fields: [scheduleId], references: [id])
  shiftId    String?
  shift      Shift?    @relation(fields: [shiftId], references: [id])
  userId     String
  user       User      @relation(fields: [userId], references: [id])
  comment    String
  createdAt  DateTime  @default(now())
}

model AuditLog {
  id         String   @id @default(cuid())
  actorId    String
  actor      User     @relation(fields: [actorId], references: [id])
  action     String
  entityType String
  entityId   String
  metaJson   String?  // Store metadata as JSON string
  createdAt  DateTime @default(now())
}

model Availability {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  date      DateTime
  startTime String   // HH:mm
  endTime   String   // HH:mm
  
  @@unique([userId, date])
}

model ShiftSwapRequest {
  id               String   @id @default(cuid())
  shiftId          String
  shift            Shift    @relation(fields: [shiftId], references: [id])
  requestingUserId String
  requestingUser   User     @relation("RequestingUser", fields: [requestingUserId], references: [id])
  targetUserId     String?
  targetUser       User?    @relation("TargetUser", fields: [targetUserId], references: [id])
  status           String   @default("PENDING") // PENDING, APPROVED, REJECTED
  message          String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model Vendor {
  id        String   @id @default(cuid())
  name      String
  contact   String?
  email     String?
  phone     String?
  address   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  batches   InventoryBatch[]
}

model Location {
  id        String   @id @default(cuid())
  name      String
  address   String?
  timezone  String   @default("America/Toronto")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  products  Product[]
  batches   InventoryBatch[]
  schedules Schedule[]
  users     User[]
}
